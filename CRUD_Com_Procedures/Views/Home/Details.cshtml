@model IEnumerable<CRUD_Com_Procedures.Models.Matricula>

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Details";
}
@if (TempData["MessagemDetailsMatricula"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
            <strong>@TempData["MessagemDetailsMatricula"]</strong>        
    </div>       
}
@if (TempData["MessagemSucessoMatriculaAluno"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
        <strong>@TempData["MessagemSucessoMatriculaAluno"]</strong>        
    </div>       
}
@if (TempData["MessagemSucessoDelMatriculaALuno"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
         <strong>@TempData["MessagemSucessoDelMatriculaALuno"]</strong>        
    </div>       
}
<h1>Cursos Matriculados</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataMatricula)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.NomeCurso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>                 
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.DataMatricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCurso)
                </td> 
                <td>               
                <a asp-action="DeleteMatricula" class="btn bg-danger" asp-route-id="@item.Id">Remover</a>                
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="PaginaAluno" class="btn btn-primary" >Retornar Para Pagina do Aluno</a>
    <a asp-action="Matricular" class="btn btn-warning" >Matricular em novo Curso</a>
</div>