@model CRUD_Com_Procedures.Models.Matricula

@{
    ViewData["Title"] = "DeleteMatricula";
    Layout = "_LayoutDeslogado";
}
@if (TempData["MessagemSucessoDelMatriculaALuno"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
        <strong>@TempData["MessagemSucessoDelMatriculaALuno"]</strong>        
    </div>       
}

<h3>Tem certeza que deseja remover sua matricula?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataMatricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataMatricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCurso)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover Matricula" class="btn btn-danger">
        <a asp-action="PaginaAluno" class="btn btn-primary">Retornar para pagina do aluno</a>
    </form>
</div>
