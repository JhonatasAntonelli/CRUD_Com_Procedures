@model Login

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Index";
}
@if (TempData["MessagemErrorLogin"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
        <strong>@TempData["MessagemErrorLogin"]</strong>        
    </div>       
}
@if (TempData["MessagemSucessoAddAluno"] != null)
{   
    <div class="alert alert-warning alert-info" role="alert">
        <strong>@TempData["MessagemSucessoAddAluno"]</strong>        
    </div>       
}

<br />
<br />
<form asp-action="Login" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" asp-for="LoginProvider" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.LoginProvider)
  </div>
  <br />
  <div class="mb-3">
    <label for="senha" class="form-label">Senha</label>
    <input type="password" asp-for="ProviderKey" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.ProviderKey)
  </div>
  <button type="submit" class="btn btn-primary">Entrar</button>
</form>
<br />
<br />
<h1 class="display-5">Ainda não é nosso aluno? Faça o seu cadastro!</h1>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">                
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Create">Criar Cadastro</a>
            </li>            
        </ul>
    </div>