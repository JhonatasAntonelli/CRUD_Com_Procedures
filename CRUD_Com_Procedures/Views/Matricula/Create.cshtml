@model CRUD_Com_Procedures.Models.Matricula

@{
    ViewData["Title"] = "Create";
}

<h1>Realizar Nova Matricula</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdAluno" class="control-label"></label>
                <select input asp-for="IdAluno" class="form-select" asp-items="Model.ContatosSelectListNome"></select>                
                <span asp-validation-for="IdAluno" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IdCurso" class="control-label"></label>
                <select input asp-for="IdCurso" class="form-select" asp-items="Model.ContatosSelectListCurso"></select>   
                <span asp-validation-for="IdCurso" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar Matricular" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Retornar para lista de matriculas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
